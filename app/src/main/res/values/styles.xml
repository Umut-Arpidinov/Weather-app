<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="WeatherTitleStyle">
        <item name="android:textSize">@dimen/size_24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/inter_medium</item>
    </style>

    <style name="WeatherTitleStyleShimmer">
        <item name="android:textSize">@dimen/size_24sp</item>
        <item name="android:textColor">@color/shimmer_gray</item>
        <item name="fontFamily">@font/inter_medium</item>
    </style>

    <style name="SpinnerTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/inter_regular</item>
    </style>

    <style name="ItemRecyclerTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/inter_medium</item>
    </style>

    <style name="InputFieldsTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textColorHint">@color/shimmer_gray</item>

    </style>
    <style name="TemperatureStyle">
        <item name="android:textSize">@dimen/size_64sp</item>
        <item name="fontFamily">@font/inter_light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TemperatureStyleShimmer">
        <item name="android:textSize">@dimen/size_64sp</item>
        <item name="fontFamily">@font/inter_light</item>
        <item name="android:textColor">@color/shimmer_gray</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="DateTextStyle">
        <item name="android:textSize">@dimen/size_18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/inter_regular</item>
    </style>
    <style name="DateTextStyleShimmer">
        <item name="android:textSize">@dimen/size_18sp</item>
        <item name="android:textColor">@color/shimmer_gray</item>
        <item name="fontFamily">@font/inter_regular</item>
    </style>

    <style name="HourlyTextStyle">
        <item name="android:textSize">@dimen/size_12sp</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="HourlyTextStyleTemperature">
        <item name="android:textSize">@dimen/size_14sp</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/bright_yellow</item>
        <item name="android:textSize">@dimen/size_12sp</item>
    </style>

    <style name="ShimmerTextStyle">
        <item name="android:textSize">@dimen/size_24sp</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/shimmer_gray</item>
    </style>


</resources>